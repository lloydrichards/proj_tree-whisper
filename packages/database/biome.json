{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "root": false,
  "extends": "//",
  "files": {
    "includes": ["!migrate"]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noShadowRestrictedNames": "off"
      },
      "style": {
        "useFilenamingConvention": {
          "level": "warn",
          "options": {
            "filenameCases": ["kebab-case", "PascalCase", "snake_case"]
          }
        }
      }
    }
  }
}
